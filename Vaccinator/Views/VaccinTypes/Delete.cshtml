@model Vaccinator.Models.VaccinType

@{
    ViewData["Title"] = "Delete";
}

<h1>Suppression d'un vaccin</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce vaccin ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cible)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cible)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscoveryYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscoveryYear)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
