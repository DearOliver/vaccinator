@model Vaccinator.Models.Injection

@{
    ViewData["Title"] = "Delete";
}

<h1>Suppression d'un vaccin</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce vaccin ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VaccinType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VaccinType.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Personne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Personne.Nom)
            @Html.DisplayFor(model => model.Personne.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reference)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RappelDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RappelDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
